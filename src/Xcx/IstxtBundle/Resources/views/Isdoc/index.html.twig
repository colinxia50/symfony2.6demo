{% extends 'XcxIstxtBundle::layout.html.twig' %}
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/xcxistxt/css/demo.css') }}" type="text/css" media="all" />
{% endblock %}

{% block container -%}

    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12 text-center">
                    <h2 class="brand-before">
                        <small>Welcome to</small>
                    </h2>
                    <h1 class="brand-name">胡说 八道</h1>
                    <hr class="tagline-divider">
                    <h2>
                        <small>By
                            <strong>
                            <a class="btn btn-primary" role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
							  胡言乱语
							</a>
							
							</strong>
                        </small>
                    </h2>

							<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
							    <div class="modal-dialog modal-full" role="document">
							      <div class="modal-content">
							        <div class="modal-header">
							          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
							          <h4 class="modal-title" id="myModalLabel">提示</h4>
							        </div>
							        <div class="modal-body">
							 
							          <div class="form-group">
					                    <h2 id="msg" class="brand-before">
					                        <small>Welcome</small>
					                    </h2>
							          </div>
					
							        </div>
							        <div class="modal-footer">
							          <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span>关闭</button>
							        </div>
							      </div>
							    </div>
							  </div>


                    <div class="collapse" id="collapseExample">
					  <div class="well">
					    	<form id="isdoc">

								<div class="form-group has-warning">
								  <label class="control-label" for="inputWarning1"><i class="icon-user"></i>牛逼的标题</label>
								  <input type="text" class="form-control" id="inputWarning1" name="position">
								</div>
								
							 <div class="form-group">
    							<label for="exampleInputFile"><i class="icon-lock"></i>臭不要脸的话</label>
								<textarea class="form-control" rows="5" name="description"></textarea>
							  </div>
							  <select class="form-control" name="category_id">
							  {% for category in categories %}
							   	  <option value="{{ category.id }}">喷-{{ category.name }}</option>
							  {% endfor %}
								</select>
							  <button type="submit" class="btn btn-default">喷！ 吧！</button>
							</form>
					  </div>
					</div>
                    
                </div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                </div>
             </div>
        </div>

    </div>
              <div class="clearfix"></div>
          
 <!-- /.瀑布流 -->

                <div id="main">
                    {% for category in categories %}
                    	{% for entity in category.activejobs %}
                    <div class="pin">
                        <div class="boxx">
                         	<strong>{{ category.name }}</strong>->
							<h2 class="text-center">{{ entity.position }}</h2>
							<small>日期：<cite title="Source Title">{{ entity.createdat|date('Y-m-d H:i:s') }}</cite></small>
							<p class="text-success">{{ entity.description [0:200] }} {% if entity.description|length >200 %}
							<a href="{{ path('xcx_isdoc_show', { 'id': entity.id }) }}">查看</a>
																					{% endif %}
							</p> 
                        </div>
                    </div>
                         {% endfor %}
        			{% endfor %}
                
                
                </div>
                
                


    </div>
    <!-- /.container -->
    {% endblock %}
